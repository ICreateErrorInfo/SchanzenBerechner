<UserControl x:Class="SchanzenBerechner.SchanzenVisualisierung"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SchanzenBerechner"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Viewbox Grid.Row="0">
            <Canvas x:Name="Canvas" Width="100" Height="100">

                <Canvas.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="-1" />
                </Canvas.LayoutTransform>

                <Path x:Name="SchanzenPath" Stroke="Black" StrokeThickness="1" Fill="Orange" />
            </Canvas>
        </Viewbox>
    </Grid>

</UserControl>