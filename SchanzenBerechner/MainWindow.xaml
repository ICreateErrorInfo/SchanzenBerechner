<Window x:Class="SchanzenBerechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchanzenBerechner"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        d:Height="800" d:Width="1024"
        Title="Schanzen Rechner">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">

            <TabItem Header="Entfernung u. Höhe">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                        <ColumnDefinition Width="269*" MinWidth="269" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="37" />
                        <ColumnDefinition Width="213*" MinWidth="200" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Absprung Winkel in Grad" Grid.Row="1" Grid.Column="1" />
                    <TextBox Name="AbsprungWinkelTextBox_Tab1" Text="22" Grid.Row="1" Grid.Column="2" />

                    <Label Content="Absprung Geschwindigkeit in km/h" Grid.Row="3" Grid.Column="1" />
                    <TextBox Name="AbsprungGeschwindigkeitTextBox_Tab1" Text="30" Grid.Row="3" Grid.Column="2" />

                    <Label Content="Absprung Höhe in cm" Grid.Row="5" Grid.Column="1" />
                    <TextBox Name="AbsprungHöheTextBox_Tab1" Text="20" Grid.Row="5" Grid.Column="2" />


                    <Label Content="Sprung Entfernung" Grid.Row="1" Grid.Column="4" />
                    <Label Name="SprungEntfernungText_Tab1" Content="0" Grid.Row="1" Grid.Column="5" />

                    <Label Content="Sprung Höhe" Grid.Row="3" Grid.Column="4" />
                    <Label Name="SprungHöheText_Tab1" Content="0" Grid.Row="3" Grid.Column="5" />

                    <Button Content="Berechnen"
                            Grid.Column="5"
                            Grid.Row="5"
                            Click="OnBerechnenClickTab1" />

                </Grid>
            </TabItem>
            <TabItem Header="Winkel">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                        <ColumnDefinition Width="269*" MinWidth="269" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="37" />
                        <ColumnDefinition Width="213*" MinWidth="200" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                    </Grid.ColumnDefinitions>

                    <Label Content="Absprung Winkel" Grid.Row="1" Grid.Column="1" />
                    <Label Name="AbsprungWinkelText_Tab2" Content="0" Grid.Row="1" Grid.Column="2" />

                    <Label Content="Absprung Geschwindigkeit" Grid.Row="3" Grid.Column="1" />
                    <TextBox Name="AbsprungGeschwindigkeitTextBox_Tab2" Text="0" Grid.Row="3" Grid.Column="2" />

                    <Label Content="Sprung Entfernung" Grid.Row="1" Grid.Column="4" />
                    <Label Name="SprungEntfernungText_Tab2" Content="0" Grid.Row="1" Grid.Column="5" />

                    <Label Content="Sprung Höhe" Grid.Row="3" Grid.Column="4" />
                    <TextBox Name="SprungHöheTextBox_Tab2" Text="0" Grid.Row="3" Grid.Column="5" />


                    <Button Content="Berechnen"
                            Grid.Column="5"
                            Grid.Row="5"
                            Click="OnBerechneClickTab2" />
                </Grid>

            </TabItem>
            <TabItem Header="Geschwindikeit">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                        <ColumnDefinition Width="269*" MinWidth="269" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="37" />
                        <ColumnDefinition Width="213*" MinWidth="200" />
                        <ColumnDefinition Width="330*" MinWidth="200" />
                        <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                    </Grid.ColumnDefinitions>

                    <TextBox Name="AbsprungWinkelTextBox_Tab3" Text="0" Grid.Row="1" Grid.Column="2"  />

                    <TextBox Name="SprungEntfernungTextBox_Tab3" Text="0" Grid.Row="1" Grid.Column="5" />

                    <TextBox Name="AbsprungGeschwindigkeitTextBox_Tab3" Text="0" Grid.Row="3" Grid.Column="2" />

                    <TextBox Name="SprungHöheTextBox_Tab3" Text="0" Grid.Row="3" Grid.Column="5" />


                    <Label Content="Absprung Winkel" Grid.Row="1" Grid.Column="1" />

                    <Label Content="Absprung Geschwindigkeit" Grid.Row="3" Grid.Column="1" />
                    <Label Content="Sprung Höhe" Grid.Row="3" Grid.Column="4" />

                    <Label Content="Sprung Entfernung" Grid.Row="1" Grid.Column="4"  />

                    <Button Content="Berechnen" Grid.Column="5" Grid.Row="5" 
                            Click="OnBerechneClickTab3" />
                </Grid>

            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="500*" MinHeight="200" />
                <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
            </Grid.RowDefinitions>

            <Viewbox Grid.Row="0" Stretch="Uniform">
                <local:SchanzenVisualisierung x:Name="SchanzenVisualisierung" />

            </Viewbox>

            <CheckBox Grid.Row="0" IsChecked="{Binding ElementName=SchanzenVisualisierung, Path=RenderMetrics}">Metriken anzeigen</CheckBox>
        </Grid>

    </Grid>

</Window>