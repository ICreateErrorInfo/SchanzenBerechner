<Window x:Class="SchanzenBerechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchanzenBerechner"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title="Schanzen Rechner" Height="720" Width="1280">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="220" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TabControl Grid.Row="0">
                <TabItem Header="Berechnen">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="10" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                            <ColumnDefinition Width="269*" MinWidth="269" />
                            <ColumnDefinition Width="330*" MinWidth="200" />
                            <ColumnDefinition Width="37" />
                            <ColumnDefinition Width="213*" MinWidth="200" />
                            <ColumnDefinition Width="330*" MinWidth="200" />
                            <ColumnDefinition Width="30*" MinWidth="10" MaxWidth="30" />
                        </Grid.ColumnDefinitions>
                        <TextBox Name="AbsprungWinkelTextBox" Text="0" Grid.Row="1" Grid.Column="2" FontSize="22"
                                 HorizontalAlignment="Stretch" VerticalContentAlignment="Center" />
                        <TextBox Name="SprungEntfernungTextBox" Text="0" Grid.Row="1" Grid.Column="5" FontSize="22"
                                 HorizontalAlignment="Stretch" VerticalContentAlignment="Center" />
                        <TextBox Name="AbsprungGeschwindigkeitTextBox" Text="0" Grid.Row="3" Grid.Column="2"
                                 FontSize="22" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" />
                        <TextBox Name="SprungHöheTextBox" Text="0" Grid.Row="3" Grid.Column="5" FontSize="22"
                                 HorizontalAlignment="Stretch" VerticalContentAlignment="Center" />

                        <Label Content="Absprung Winkel" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
                               VerticalContentAlignment="Center" FontSize="25" FontWeight="Bold" />
                        <Label Content="Absprung Geschwindigkeit" Grid.Row="3" Grid.Column="1"
                               HorizontalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="25"
                               FontWeight="Bold" />
                        <Label Content="Sprung Höhe" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Stretch"
                               VerticalContentAlignment="Center" FontSize="25" FontWeight="Bold" />
                        <Label Content="Sprung Entfernung" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Stretch"
                               VerticalContentAlignment="Center" FontSize="25" FontWeight="Bold" />

                        <Button Content="Berechnen" Grid.Column="5" Grid.Row="5" FontSize="30" FontWeight="Bold"
                                Click="OnBerechnenClick" />

                    </Grid>

                </TabItem>
                <TabItem Header="Test" />
                <TabItem Header="Test" />
            </TabControl>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="500*" MinHeight="200" />
                    <RowDefinition Height="30*" MinHeight="10" MaxHeight="30" />
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0">

                    <Canvas Width="100" Height="100">
                        <Canvas.LayoutTransform>
                            <ScaleTransform ScaleX="1" ScaleY="-1" CenterX=".5" CenterY=".5" />
                        </Canvas.LayoutTransform>
                        <Path Stroke="Black" StrokeThickness="1" Fill="Orange">
                            <Path.Data>
                                <PathGeometry>
                                    <PathFigure IsClosed="true">
                                        <LineSegment Point="0,0" />
                                        <LineSegment Point="100,0" />
                                        <LineSegment Point="100,20" />
                                        <ArcSegment Size="300,300" Point="0,0" />
                                    </PathFigure>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Canvas>
                </Viewbox>
            </Grid>

        </Grid>
    </ScrollViewer>

</Window>